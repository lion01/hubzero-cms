<extension version="1.5" type="plugin" group="members">
	<name>Members - Collections</name>
	<author>HUBzero</author>
	<creationDate>December 2012</creationDate>
	<copyright>Copyright 2005-2013 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<authorEmail>support@hubzero.org</authorEmail>
	<version>1.5</version>
	<description>Display collections</description>
	<files>
		<filename plugin="collections">collections.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_members_collections.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="maxWidth" type="text" menu="hide" default="290" label="Max Image Width" description="Max Image Width for tile listing" />
				<field name="defaultView" type="list" default="0" label="Default View" description="Default view for the tab.">
					<option value="feed">Activity feed</option>
					<option value="collections">User's Collections</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
