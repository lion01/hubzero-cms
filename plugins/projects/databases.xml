	</files>
	<params>
		<param name="db_host" type="text" default="localhost" label="Database Host" description="The hostname of the database server"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param name="@spacer" type="spacer" default="Read/Write MySQL Account" label="" description="" />
		<param name="db_user" type="text" menu="hide" default="datawriter" label="Database User [rw]" description="User name for the MySQL account" />
		<param name="db_password" type="password" menu="hide" default="datawriter_pw" label="Database Password [rw]" description="Password for the MySQL account" />

		<param name="@spacer" type="spacer" default="Read only MySQL Account" label="" description="" />
		<param name="db_ro_user" type="text" menu="hide" default="dataviewer" label="Database User [ro]" description="User name for the MySQL account [used by the dataviewer]" />
		<param name="db_ro_password" type="password" menu="hide" default="dataviewer_pw" label="Database Password [ro]" description="Password for the MySQL account [used by the dataviewer]" />
		<param name="@spacer" type="spacer" default="Read only MySQL Account" label="" description="" />
		<param name="restricted" type="text" menu="hide" default="" label="Restricted to projects" description="Comma-separated aliases of projects that have databases plugin enabled (empty field means NO RESTRICTIONS)" />
	</params>
</install>
